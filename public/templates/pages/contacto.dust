      <div class="d-none d-sm-block mb-5 pb-4">
        <div id="map" style="height: 420px;"></div>
        <script>
          function initMap() {
            var uluru = {lat: 6.2518401 , lng: -75.563591};
            var grayStyles = [
              {
                featureType: "all",
                stylers: [
                  { saturation: -150 },
                  { lightness: 85 }
                ]
              },
              {elementType: 'labels.text.fill', stylers: [{color: '#A3A3A3'}]}
            ];
            var map = new google.maps.Map(document.getElementById('map'), {
              center: {lat: 6.2672 , lng: -75.5692},
              zoom: 16.2,
              styles: grayStyles,
              scrollwheel:  false
            });
          }
          
        </script>
